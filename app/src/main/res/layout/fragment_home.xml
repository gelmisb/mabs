<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fadeScrollbars="true"
        android:fillViewport="false"
        android:padding="30dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userHi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/caviardreams"
                    android:text="Welcome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/userHi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/expenses"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="138dp"
                    android:fontFamily="@font/caviardreamsbold"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="38sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/caviardreams"
                android:text="Your total expenses: "
                android:textAlignment="center"
                android:textColor="#4c4c4c"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/caviardreams"
                android:paddingTop="100dp"
                android:text="News"
                android:textAlignment="viewStart"
                android:textColor="#4c4c4c"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="August"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="15 August 2018: Offaly homeowners in mortgage arrears urged to contact MABS " />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:padding="10dp"
                android:text="03 August 2018: Sale of home mortgages to 'funds' " />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="July"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="04 July 2018:     Mortgage to Rent Scheme and Abhaile help homeowners stay in their homes " />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="June"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="25 June 2018: MABS submission to the Central Bank of Ireland’s Discussion Paper on ‘Digitalisation and the Consumer Protection Code’ " />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/caviardreams"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="21 June 2018: Central BoI statistics and Abhaile helpline trends offer hope to those in serious mortgage arrears " />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="February"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/caviardreams"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="15 February 2018:     Over 50% of MABS clients go without heat in Ballyfermot and Cherry Orchard area according to new report - Left Behind in the Cold? " />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/mic2"
            android:src="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviardreams"
            android:text="@string/tap_on_mic"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>